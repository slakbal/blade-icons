{
    "name": "driesvints/blade-icons",
    "description": "A package to easily make use of icons in your Laravel Blade views.",
    "keywords": [
        "Blade",
        "Heroicons",
        "Zondicons",
        "Laravel"
    ],
    "homepage": "https://github.com/driesvints/blade-icons",
    "license": "MIT",
    "authors": [
        {
            "name": "Dries Vints",
            "email": "dries@vints.io",
            "homepage": "https://driesvints.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/support": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Dries\\Icons\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dries\\Icons\\BladeIconsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
